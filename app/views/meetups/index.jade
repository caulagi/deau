extends ../layouts/default

block content
  .city
    .pull-right Showing upcoming events in #{area.city}, #{area.region_name}, #{area.country_name}
  h1= title
  - if (meetups.length)
    - each meetup in meetups
      .meetup
        h3
          a(href='/meetups/'+meetup._id, title=meetup.title) #{meetup.title}
        p= meetup.description

        .meta.muted
          span= formatDate(meetup.createdAt)
          &nbsp; - &nbsp;
          - if (meetup.user)
            span Author &nbsp;

            - var name = meetup.user.name ? meetup.user.name : meetup.user.username

            a(href="/users/"+meetup.user._id)= name
          - if (meetup.tags)
            &nbsp; - &nbsp;
            - each tag in meetup.tags.split(',')
              &nbsp;
              a.tag(href="/tags/"+tag)
                i.icon-tags
                |  #{tag}

    - if (pages > 1)
      .pagination
        ul
          != createPagination(pages, page)
  - else
    p.muted No meetups.&nbsp;
      a(href="/meetups/new") create one
