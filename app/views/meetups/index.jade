extends ../layouts/default

block content
  include ../includes/marketing

  -if (area)
    .city
      .pull-right Showing upcoming events in #{area.city},
        | #{area.region_name}, #{area.country_name}
  h1= title
  - if (meetups.length)
    .row-fluid
      .span9
        - each meetup in meetups
          include ./meetup

        - if (pages > 1)
          .pagination
            ul
              != createPagination(pages, page)

      .span2.offset1
        include ./browse

  - else
    p.muted No meetups yet in your city.&nbsp;
      a(href="/meetups/new") create one

block extra_js
  script.
    mixpanel.track('Event listing (index) page')
