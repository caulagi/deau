extends ../layouts/default

block content
  h2.vspace-two Profile of #{user.name}
  .col-xs-offset-1
    .vspace-two Meetups posted by #{user.name}
    .row
      .col-xs-offset-1
        - if (meetups.length)
          ul.vspace-one
            - for meetup in meetups
              li
                a(href='/meetups/#{meetup._id}') #{meetup.title}
        - else
          p.vspace-two No meetups yet!  
            a(href='/meetups/new') Post one now.

block extra_js
  script.
    mixpanel.track('User profile page')
