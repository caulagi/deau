mixin renderMeetup(meetup, index)
  .meetup.row
    .col-sm-2.col-xs-4
      .date.purple
        span.glyphicon.glyphicon-calendar.red
        | &nbsp;#{formatDate(meetup.startDate)}
      .vspace-one.align-right
        | #{meetup.venue}
    .col-sm-offset-1.col-sm-6.col-xs-8
      h3
        a(href='/meetups/'+meetup._id, title=meetup.title) #{meetup.title}
        -if (meetup.isFree)
          span.free.label.label-success free
      .row
        div !{meetup.description}
    .col-sm-offset-1.col-sm-1.hidden-xs
      -if (meetup.tags.length)
        ul.list-unstyled
          -for tag in meetup.tags.split(',')
            li
              a(href="/tags/#{tag}") #{tag}
