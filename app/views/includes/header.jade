
#masthead
  .pull-right
    if (req.isAuthenticated())
      .dropdown
        a(data-toggle="dropdown", href="#").dropdown-toggle
          img(src=req.user.twitter.profile_image_url, class="img-polaroid")
        ul(role="menu").dropdown-menu.pull-right
          li
            a(href="/users/"+req.user.id, title="Profile") Profile
          li.divider
          li
            a(href="/logout", title="logout") Logout
    else
      .input-prepend
        span.add-on
          i.icon-user
        a(href="/login", class="btn") Login or signup
  h1
    a.brand(href='/') deau:
    span.subheading Developer Events Around You
  hr
